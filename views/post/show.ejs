<% include ../partials/header %>
<div class="w-1/2 mx-auto ">
    <div class="my-4">
        <h1 class='text-center'><%= post.title %></h1>
        <p class="text-grey-600 leading-normal">
            <%= post.text %>
        </p>
    </div>
    <div class="comments">
        <% comments.forEach(function(comment){ %>
            <p class="border rounded m-1 p-1"><%= comment.comment %></p>
        <% }) %>
    </div>
    <% if(currentUser){ %>
    <div class="my-4 border-t">
        <h2 class="text-gray-500">Add comment</h2>
        <form action="/comment/<%= post.id %>" method="POST">
            <textarea class="w-full border rounded p-1" name="comment" id="comment" cols="30" rows="5"></textarea>
            <input class="py-2 px-4 bg-green-500 text-white rounded" type="submit" value="Add">
        </form>
    </div>
    <% } %>
</div>


<% include ../partials/footer %>